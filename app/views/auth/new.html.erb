<header>
  <h3><%=t('auth.login.title') %></h3>
</header>
<div class="widget-body">
  <p class="widget-login-info">
    <%=t('auth.login.msg') %>
  </p>
  <%= form_for(:auth, url: login_path, :html => {:class => "login-form mt-lg"}) do |f| %>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: true %>
    </div>

    <div class="clearfix">
      <div class="btn-toolbar pull-xs-left">
        <%= link_to t('common.back'), root_url, class: "btn btn-secondary btn-sm pull-left"%>
      </div>

      <div class="btn-toolbar pull-xs-right">
        <%= link_to t('auth.login.register'), signup_path, class: "btn btn-secondary btn-sm"%>
        <%= f.submit class: "btn btn-inverse btn-sm" %>
      </div>
    </div>
  <% end %>
</div>

