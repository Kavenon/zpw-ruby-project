<%= form_with(model: event, local: true, html: { multipart: true },  class: "form-horizontal") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group-first-child display-flex mb-lg">
    <%= form.datetime_select :date, id: :event_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :required_age %>
    <%= form.text_field :required_age, id: :event_required_age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :desc %>
    <%= form.text_field :desc, id: :event_desc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :event_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :free_seats %>
    <%= form.text_field :free_seats, id: :event_free_seats, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :poster %>
    <%= form.file_field :poster, id: :event_poster, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-inverse btn-sm" %>
  </div>
<% end %>
