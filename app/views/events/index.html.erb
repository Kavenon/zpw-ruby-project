<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Datetime,</th>
      <th>Required age</th>
      <th>Integer,</th>
      <th>Name</th>
      <th>String,</th>
      <th>Desc</th>
      <th>String,</th>
      <th>Price</th>
      <th>Decimal,</th>
      <th>Free seats</th>
      <th>Integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.datetime, %></td>
        <td><%= event.required_age %></td>
        <td><%= event.integer, %></td>
        <td><%= event.name %></td>
        <td><%= event.string, %></td>
        <td><%= event.desc %></td>
        <td><%= event.string, %></td>
        <td><%= event.price %></td>
        <td><%= event.decimal, %></td>
        <td><%= event.free_seats %></td>
        <td><%= event.integer %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

